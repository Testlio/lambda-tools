root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 4

# Matches the exact files either package.json or .travis.yml
[{package.json}]
indent_style = space
indent_size = 2
